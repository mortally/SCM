<div class="breadcrumb">
  <div class="bc">
    <%= link_to 'Analysis Home', analysis_root_path %> > <%= link_to 'Strategies', analysis_strategies_path %> > <%= link_to @strategy.name, [:analysis, @strategy] %> > Edit Strategy
  </div>
</div>

<h3>Edit strategy</h3>

<% form_for([:analysis,@strategy]) do |f| %>
  <%= f.error_messages %>

  <table>
    <tr>
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :server_index %></td>
      <td><%= f.text_field :server_index %></td>
    </tr>
    <tr>
      <td><%= f.label :description %></td>
      <td><%= f.text_area :description, :cols=>27, :rows=>10 %></td>
    </tr>
  </table>
  
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
