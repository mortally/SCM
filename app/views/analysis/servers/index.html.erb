<div class="breadcrumb">
  <div class="bc">
    <%= link_to 'Analysis Home', analysis_root_path %> >  Servers
  </div>
</div>

<h3>Servers</h3>

<table width="90%">
<tr>
  <th>Name</th><th>Server Index</th>
</tr>

<% @servers.each do |server| %>
  <tr class="<%= cycle('','altrow') %>">
    <td><%= link_to server.name, [:analysis, server] %></td>
    <td><%= link_to server.server_index, [:analysis, server] %></td>
    <td><%= link_to 'Destroy', [:analysis, server], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

